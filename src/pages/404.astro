---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Page Not Found | Hassan Anees">
  <div class="max-w-screen-md p-6 md:mx-auto py-14">
    <div class="text-center">
      <h1 class="mb-4 text-6xl font-bold text-gray-300">404</h1>
      <h2 class="mb-4 text-2xl font-bold">Page Not Found</h2>
      <p class="mb-8 text-gray-600">The page you're looking for doesn't exist or has been moved.</p>
      <div class="space-y-4">
        <a
          href="/"
          class="inline-block px-6 py-3 text-white transition-colors rounded-lg bg-cyan-600 hover:bg-cyan-700"
        >
          Go Home
        </a>
        <div class="text-sm text-gray-500">
          <p>Or try these pages:</p>
          <div class="mt-2 space-x-4">
            <a href="/writing" class="text-cyan-600 hover:text-cyan-700">Writing</a>
            <a href="/work" class="text-cyan-600 hover:text-cyan-700">Work</a>
            <a href="/#about" class="text-cyan-600 hover:text-cyan-700">About</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</Layout>
