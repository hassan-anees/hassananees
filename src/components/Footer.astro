---
import SocialMedia from "../components/SocialMedia.astro";
import hlogo from "../assets/speaking/hlogo.svg";
import { Icon } from "astro-icon/components";
import { Image } from "astro:assets";
---

<footer id="contact" class="py-10 font-semibold text-white bg-zinc-950">
  <div class="max-w-screen-md p-6 md:mx-auto">
    <div class="flex flex-col-reverse gap-4 sm:flex-row sm:justify-between">
      <!-- contact -->
      <div class="">
        <p class="font-light text-gray-200">Questions? Feel free to reach out for a chat. ☕️</p>
        <div class="flex items-center gap-4 py-1">
          <div>
            <Image src={hlogo} alt="Hassan Anees Logo" class="" width={20} />
          </div>
          <div>
            <p class="text-2xl font-normal text-gray-500">@</p>
          </div>
          <div class="flex gap-3">
            <div
              class="p-1 transition duration-300 ease-in-out rounded-md bg-neutral-900 hover:text-black hover:bg-zinc-200"
            >
              <a href="https://www.linkedin.com/in/hassan-anees/" target="_blank">
                <Icon size={20} class="" name="mdi:linkedin" />
              </a>
            </div>
            <div
              class="p-1 transition duration-300 ease-in-out rounded-md bg-neutral-900 hover:text-black hover:bg-zinc-200"
            >
              <a href="mailto:hassan.anees@outlook.com">
                <Icon size={20} class="" name="mdi:email" />
              </a>
            </div>
          </div>
        </div>
        <div class="flex items-center">
          <p class="py-2 font-light text-gray-300">Have a beautiful day.</p>
          <Icon size={30} class="hover:text-cyan-500" name="meteocons:clear-day-fill" />
        </div>
        <div class="text-sm font-thin text-gray-400">© All rights reserved.</div>
        <div class="text-sm font-thin text-gray-400">Made with ❤️ by Hassan.</div>
      </div>
      <!-- Links -->
      <div class="">
        <div class="flex flex-col gap-2">
          <h4 class="font-normal uppercase text-slate-300">Links</h4>
          <div>
            <a
              class="font-light text-gray-400 transition duration-300 ease-in-out hover:text-cyan-500"
              href="/blog">Blog</a
            >
          </div>
          <div>
            <a
              class="font-light text-gray-400 transition duration-300 ease-in-out hover:text-cyan-500"
              href="/about">About</a
            >
          </div>
          <div>
            <a
              class="font-light text-gray-400 transition duration-300 ease-in-out hover:text-cyan-500"
              href="/work">Work</a
            >
          </div>
        </div>
      </div>
      <!-- Socials -->
      <div class="">
        <div class="flex flex-col gap-2">
          <h4 class="font-normal uppercase text-slate-300">Social</h4>
          <div>
            <a
              class="font-light text-gray-400 transition duration-300 ease-in-out hover:text-cyan-500"
              href="https://www.linkedin.com/in/hassan-anees/"
              target="_blank">LinkedIn</a
            >
          </div>
          <div>
            <a
              class="font-light text-gray-400 transition duration-300 ease-in-out hover:text-cyan-500"
              href="mailto:hassan.anees@outlook.com">Email</a
            >
          </div>
          <div>
            <a
              class="font-light text-gray-400 transition duration-300 ease-in-out hover:text-cyan-500"
              href="https://github.com/hassan-anees"
              target="_blank">GitHub</a
            >
          </div>
        </div>
      </div>
    </div>

    <!-- always at bottom -->
  </div>
</footer>
