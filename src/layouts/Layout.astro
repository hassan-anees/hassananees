---
import Head from "../components/Head.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import "@fontsource-variable/urbanist";

const { title, description, image, ...props } = Astro.props;
const canonical = Astro.url.pathname;
---

<!doctype html>
<html class="scroll-smooth scroll-p-16" lang="en">
  <head>
    <meta charset="UTF-8" />
    <Head title={title} description={description} canonical={canonical} image={image} />
    <script
      defer
      src="https://analytics.us.umami.is/script.js"
      data-website-id="8c09bc2b-6153-4ea3-a006-00201633b7f5"></script>
  </head>
  <body class="font-sans">
    <!-- this makes it so that the footer sticks to the bottom -->
    <div class="flex flex-col justify-between h-screen">
      <Header />
      <main class="pt-16">
        <slot />
      </main>
      <!-- <ContactForm /> -->
      <Footer />
    </div>

    <script src="https://web3forms.com/client/script.js" async defer></script>
    <script>
      import "../scripts/menu.js";
    </script>
  </body>
</html>
